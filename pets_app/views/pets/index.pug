extends base

block content
  h2 These are #{owner.name}'s pets.
  each pet in owner.pets
    p Name: #{pet.name} Kind of pet: #{pet.species}
    form(action=`/owners/${owner.id}/pets/${pet.id}`)
       input(type="submit" value=`See ${pet.name}'s Page`)

  form(action=`/owners/${owner.id}/pets/new`) 
    input(type="submit" value="Create a new pet")
  form(action=`/owners/${owner.id}/pets?_method=DELETE` method="POST")
    input(type="submit" value="Delete all pets")
  form(action=`/owners/${owner.id}`)
    input(type="submit" value=`Back to ${owner.name}'s page`)